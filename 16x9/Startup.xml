<?xml version="1.0" encoding="UTF-8"?>
<window>		
	<backgroundcolor>0xff12161b</backgroundcolor>
	<defaultcontrol always="true">10</defaultcontrol>				
	<onload condition="System.HasAddon(script.skin.helper.service) + System.GetBool(input.enablemouse)">RunScript(script.skin.helper.service,action=togglekodisetting,setting=input.enablemouse)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + System.GetBool(filelists.showparentdiritems)">RunScript(script.skin.helper.service,action=togglekodisetting,setting=filelists.showparentdiritems)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + System.GetBool(musiclibrary.showallitems)">RunScript(script.skin.helper.service,action=togglekodisetting,setting=musiclibrary.showallitems)</onload>
	<onload>SetProperty(preload,1,Home)</onload>	
	<controls>
		<!-- splash -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">special://skin/extras/backgrounds/loading.jpg</texture>
		</control>
		<control type="label">
			<left>0</left>
			<top>495</top>
			<font>Light24</font>
			<textcolor>white</textcolor>
			<align>center</align>
			<width>1920</width>
			<height>200</height>	
			<label>31531</label>						
		</control>
		<!-- switch to home -->
		<control type="button" id="10">			
			<onfocus>SetProperty(preload,1,Home)</onfocus>			
			<!-- workaround to fill the tv channel list correclty -->						
			<onfocus condition="System.GetBool(pvrmanager.enabled)">AlarmClock(PVRWidgetWorkaround,ReplaceWindow($INFO[System.StartupWindow]),00:01,silent)</onfocus>
			<onfocus condition="!System.GetBool(pvrmanager.enabled)">ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>

	</controls>
</window>