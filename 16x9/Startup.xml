<?xml version="1.0" encoding="UTF-8"?>
<window>		
	<backgroundcolor>0xff12161b</backgroundcolor>
	<defaultcontrol always="true">10</defaultcontrol>	
	<onload condition="IsEmpty(Skin.String(LoadingDelay)">Skin.SetString(LoadingDelay,05)</onload>
	<animation effect="fade" start="100" end="0" time="0" delay="5">WindowClose</animation>
	<controls>
		<!-- splash -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">loading.jpg</texture>
		</control>
		<!-- switch to home -->
		<control type="button" id="10">			
			<onfocus>SetProperty(preload,1,Home)</onfocus>
			<onfocus>ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>

	</controls>
</window>