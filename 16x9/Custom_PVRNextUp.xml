	<controls>
		<control type="group">
			<animation effect="fade" end="100" start="0" time="200" condition="!Window.IsVisible(videoosd) + Window.IsVisible(fullscreenvideo) + Integer.IsEqual(Player.TimeRemaining(hh),00) + Integer.IsEqual(Player.TimeRemaining(mm),00) + Integer.IsLessOrEqual(Player.TimeRemaining(ss),30)">Conditional</animation>
			<left>1422</left>
			<top>523</top>
			<width>378</width>			
			<!--  Next up label -->
			<control type="label">
				<width>auto</width>
				<height>50</height>
				<font>Med40</font>
				<textcolor>ffffffff</textcolor>
				<shadowcolor>ff080808</shadowcolor>
				<label>31164</label>
			</control>
			<!-- Next episode thumb -->
			<control type="image">
				<top>70</top>
				<width>378</width>
				<height>295</height>
				<texture>common/wide_empty.png</texture>
				<aspectratio>scale</aspectratio>
			</control>
			<control type="image">
				<top>70</top>
				<width>378</width>
				<height>295</height>
				<texture>views/episode_fallback.png</texture>
				<visible>String.IsEmpty(VideoPlayer.Cover)</visible>
			</control>
			<control type="image">
				<top>70</top>
				<width>378</width>
				<height>295</height>
				<aspectratio align="center">keep</aspectratio>
				<texture>$INFO[VideoPlayer.Cover]</texture>
				<visible>!String.IsEmpty(VideoPlayer.Cover)</visible>
			</control>
			<control type="image">
				<top>70</top>
				<width>378</width>
				<height>295</height>
				<aspectratio>scale</aspectratio>
