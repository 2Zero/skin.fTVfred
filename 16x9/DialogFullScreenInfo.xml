<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- fullscreeninfo -->
	<defaultcontrol always="true">101</defaultcontrol>
	<onload>Control.Move(100,$INFO[Container(100).CurrentItem,-])</onload>
	<onload>Control.Move(100,1)</onload>
	<onunload condition="Player.Paused">Play</onunload>
	<onunload>ClearProperty(ShowXray,home)</onunload>
	<controls>
		<!--Xray Control -->
		<control type="button" id="101">
			<include>HiddenControl</include>
			<onleft condition="Container(100).HasPrevious">Control.Move(100,-1)</onleft>
			<onright condition="Container(100).HasNext">Control.Move(100,1)</onright>
			<onright condition="!Window.IsVisible(1103) + !Container(100).HasNext">SetProperty(BounceRight,1,Home)</onright>
			<ondown>close</ondown>
			<onclick>close</onclick>
			<onup condition="!IsEmpty(VideoPlayer.IMDBNumber)">SetProperty(ShowXRay,true,home)</onup>
			<onup condition="!IsEmpty(VideoPlayer.IMDBNumber)">RunScript(script.extendedinfo,info=extendedinfo,imdb_id=$INFO[VideoPlayer.IMDBNumber])</onup>
			<onup condition="!IsEmpty(VideoPlayer.IMDBNumber) + !Player.Paused">Pause</onup>
		</control>
		<!--Fullscreen Info-->
		<control type="group">
			<visible>!Window.IsActive(seekbar) + !Window.IsActive(videoosd) + IsEmpty(Window(home).Property(ShowXRay))</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<control type="image">
				<width>1980</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control id="99" type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>				
				<!--  Movie title -->
				<control id="99" type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  TV Show title -->
				<control id="99" type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!-- Season/Episode number -->
				<control id="99" type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$VAR[PlayerEpisodeValue]</label>
				</control>
			</control>
			<!--  Episode title -->
			<control id="99" type="label">
				<left>20</left>
				<top>127</top>
				<width>1880</width>
				<height>40</height>
				<align>center</align>
				<font>Light26</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>!VideoPlayer.Content(livetv) + !IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			<!--  Channel name -->
			<control id="99" type="label">
				<left>20</left>
				<top>127</top>
				<width>1880</width>
				<height>40</height>
				<align>center</align>
				<font>Light26</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[VideoPlayer.ChannelName]</label>
				<visible>VideoPlayer.Content(livetv) + !IsEmpty(VideoPlayer.ChannelName)</visible>
			</control>
			<!-- Pause -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>321</width>
				<height>341</height>
				<texture>osd/Pause.png</texture>				
				<visible>Player.Paused + !Player.Caching</visible>
				<animation type="Conditional" condition="System.IdleTime(2)" reversible="true">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
			</control>
			<!--  Cache bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.ProgressCache</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_cache.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!--  Progress bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>38</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!IsEmpty(Player.Time) + !IsEmpty(Player.Duration)</visible>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]HD[/B]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,719)</visible>
				</control>
				<!--  Resolution label -->
				<control type="label">
					<left>2</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold29</font>
					<textcolor>ffebebeb</textcolor>
					<label>$VAR[PlayerResolution]</label>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>45</bottom>
				<width>800</width>
				<height>30</height>
				<font>Reg27</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
		<!--XRay-->
		<control type="group">
			<visible>Window.IsActive(fullscreeninfo) + !Window.IsVisible(videoosd) + !Window.IsVisible(videobookmarks) + IsEmpty(Window(home).Property(ShowXRay))</visible>
			<!--Xray Icon-->
			<control id="99" type="grouplist">
				<visible>!IsEmpty(VideoPlayer.IMDBNumber) + !Window.IsVisible(seekbar)</visible>
				<centerleft>50%</centerleft>
				<bottom>40</bottom>
				<height>40</height>
				<itemgap>10</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control id="99" type="label">
					<top>6</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$LOCALIZE[31234]</label>
				</control>
				<control id="99" type="image">
					<width>40</width>
					<height>40</height>
					<texture>osd/x_ray.png</texture>
				</control>
			</control>
			<!--Cast-->
			<control type="group">				
				<animation effect="fade" time="0" start="100" end="0" condition="Container(100).IsUpdating">Conditional</animation>
				<visible>IsEmpty(Window(home).Property(ShowXRay))</visible>
				<control id="100" type="fixedlist">
					<width>1920</width>
					<left>0</left>
					<left>-350</left>
					<bottom>136</bottom>					
					<width>2270</width>
					<height>128</height>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<defaultcontrol always="true">0</defaultcontrol>
					<preloaditems>2</preloaditems>
					<focusposition>0</focusposition>
					<movement>2</movement>
					<orientation>horizontal</orientation>
					<include>ViewTypeBounceAnimation</include>
					<scrolltime easing="inout" tween="sine">300</scrolltime>		
					<itemlayout height="128" width="442">
						<control type="group">
							<left>90</left>
							<control type="image">
								<width>412</width>
								<height>128</height>
								<texture>dialogs/DialogBackground.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">views/cast_fallback.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<left>116</left>
								<top>27</top>
								<width>278</width>
								<height>40</height>
								<font>Reg32</font>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="label">
								<left>116</left>
								<top>66</top>
								<width>278</width>
								<height>36</height>
								<font>Light26</font>
								<scroll>false</scroll>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label>$INFO[ListItem.Label2]</label>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="128" width="442">
						<control type="group">
							<left>90</left>
							<control type="image">
								<width>412</width>
								<height>128</height>
								<texture>dialogs/DialogBackground.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">views/cast_fallback.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<left>116</left>
								<top>27</top>
								<width>278</width>
								<height>40</height>
								<font>Reg32</font>
								<scroll>false</scroll>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="label">
								<left>116</left>
								<top>66</top>
								<width>278</width>
								<height>36</height>
								<font>Light26</font>
								<scroll>false</scroll>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label>$INFO[ListItem.Label2]</label>
							</control>
						</control>
					</focusedlayout>
					<content>$VAR[XrayCast]</content>
				</control>
			</control>
		</control>
	</controls>
</window>