<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">5</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>DialogTextBackgroundImage</include>

		<control type="group">
			<animation reversible="true" type="WindowOpen">
				<effect center="auto" easing="inout" end="100" start="92" time="120" tween="sine" type="zoom" />
				<effect easing="inout" end="100" start="0" time="120" tween="sine" type="fade" />
			</animation>
			<animation reversible="true" type="WindowClose">
				<effect center="auto" easing="inout" end="92" start="100" time="120" tween="sine" type="zoom" />
				<effect easing="inout" end="0" start="100" time="120" tween="sine" type="fade" />
			</animation>
			<control type="group">
				<top>-105</top>
				<!-- Plot background -->
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>973</width>
					<height>660</height>
					<texture border="4,7,4,7">views/text_viewer_background.png</texture>
				</control>
				<!-- Arrow up -->
				<control type="image">
					<left>942</left>
					<top>316</top>
					<width>36</width>
					<height>20</height>
					<texture>views/arrow_up.png</texture>
					<visible>Container(3001).HasPrevious</visible>
					<animation delay="80" effect="fade" end="100" start="0" time="120">Visible</animation>
					<animation delay="80" effect="fade" end="0" start="100" time="120">Hidden</animation>
				</control>
				<!-- Text -->
				<control id="3001" type="textbox">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>788</width>
					<height>352</height>
					<align>left</align>
					<font>Reg36Spaced</font>
					<pagecontrol>3000</pagecontrol>
					<autoscroll>false</autoscroll>
					<textcolor>ffdadada</textcolor>
					<label>[B][COLOR ffffffff]$INFO[ListItem.Title][CR][/B][/COLOR][LIGHT]$INFO[ListItem.ChannelName]$INFO[ListItem.StartTime,  •  ,-]$INFO[ListItem.EndTime,,]$INFO[ListItem.Duration,  •  ,Min][CR]$VAR[Plot][/LIGHT]</label>
				</control>
				<!-- Arrow down -->
				<control type="image">
					<left>942</left>
					<top>844</top>
					<width>36</width>
					<height>20</height>
					<texture>views/arrow_down.png</texture>
					<visible>Container(3001).HasNext</visible>
					<animation delay="80" effect="fade" end="100" start="0" time="120">Visible</animation>
					<animation delay="80" effect="fade" end="0" start="100" time="120">Hidden</animation>
				</control>
				<!-- Scrollbar -->
				<control id="3000" type="scrollbar">
					<left>1394</left>
					<centertop>50%</centertop>
					<width>8</width>
					<height>446</height>
					<onup>noop</onup>
					<ondown>SetFocus(5)</ondown>
					<onleft>Close</onleft>
					<onright>Close</onright>
					<onclick>SetFocus(5)</onclick>
					<onclick>Select</onclick>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<texturesliderbarfocus border="3">common/Scrollbar.png</texturesliderbarfocus>
					<visible allowhiddenfocus="true">Control.HasFocus(3000)</visible>
					<animation condition="System.IdleTime(1)" effect="fade" end="0" start="100" time="200">Conditional</animation>
				</control>
			</control>
			<!-- Controls -->
			<control type="group">
				<left>-15</left>
				<control id="2000" type="grouplist">
					<centerleft>50%</centerleft>
					<top>825</top>
					<width>973</width>
					<height>100</height>
					<itemgap>0</itemgap>
					<onleft>50</onleft>
					<onright>50</onright>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<defaultcontrol always="true">1001</defaultcontrol>
					<!-- Dummy to always set focus to first visible button -->
					<control id="5" type="button">
						<width min="104" max="204">auto</width>
						<wrapmultiline>true</wrapmultiline>
						<height>100</height>
						<font>Med24</font>
						<label>19165</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<onup condition="Container(3001).HasNext | Container(3001).HasPrevious">SetFocus(3000)</onup>
						<visible>Control.IsEnabled(5)</visible>
					</control>
					<control id="7" type="button">
						<width min="104" max="204">auto</width>
						<wrapmultiline>true</wrapmultiline>
						<height>100</height>
						<font>Med24</font>
						<label>$LOCALIZE[222]</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<onup condition="Container(3001).HasNext | Container(3001).HasPrevious">SetFocus(3000)</onup>
						<visible>Control.IsEnabled(7)</visible>
					</control>
					<control id="6" type="button">
						<width min="104" max="204">auto</width>
						<wrapmultiline>true</wrapmultiline>
						<height>100</height>
						<font>Med24</font>
						<label>-</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<onup condition="Container(3001).HasNext | Container(3001).HasPrevious">SetFocus(3000)</onup>
						<visible>Control.IsEnabled(6)</visible>
					</control>
				</control>
			</control>
		</control>

	</controls>
</window>